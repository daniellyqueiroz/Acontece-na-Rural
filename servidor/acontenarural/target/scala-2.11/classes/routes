# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST	/requisicao				@controllers.UsuarioController.requisicaoAva
GET		/user/cadastrar			@controllers.UsuarioController.cadastrarUsuarioFixo()
GET		/user/listar			@controllers.UsuarioController.listarTodos()
POST	/user/pub        		@controllers.PublicacaoController.cadastrar()
GET  	/user/pub				@controllers.PublicacaoController.listarTodas()
GET  	/user/login				@controllers.UsuarioController.login()
GET  	/user/sair				@controllers.UsuarioController.sair()
GET  	/user/remover/:id		@controllers.UsuarioController.remover(id:Long)
GET   	/user/:id/:email		@controllers.UserController.getUser(id:Long, email:String)
